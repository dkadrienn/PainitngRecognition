<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="-4dp"
        android:elevation="-4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="150dp"
        android:translationZ="-4dp"
        android:elevation="-4dp"
        tools:context=".ImageResultDetailPage">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:outlineSpotShadowColor="@color/primaryAccent"
            android:translationZ="-40dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="-4dp"
            android:elevation="-4dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/materialCardView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/primaryAccent"
            app:strokeWidth="1dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="10dp"
            android:elevation="-4dp"
            android:backgroundTint="#515151"
            android:outlineSpotShadowColor="@color/primaryAccent"
            android:translationZ="-40dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/resultResemblance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/capturedImagePath"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <ImageView
            android:id="@+id/capturedImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationZ="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/materialCardView" />

        <TextView
            android:id="@+id/capturedImageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:translationZ="50dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/capturedImageView" />

        <TextView
            android:id="@+id/capturedImageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:07"
            android:translationZ="50dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/capturedImageTitle" />

        <TextView
            android:id="@+id/capturedImagePath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="valami/valamihgfhdfghfghdfghgdfhdfghdfghdfghdfghdfghhfgdhhdgf"
            android:textAlignment="center"
            android:textSize="15sp"
            android:lineBreakStyle="strict"
            android:translationZ="50dp"
            app:layout_constraintEnd_toEndOf="@+id/materialCardView"
            app:layout_constraintStart_toStartOf="@+id/materialCardView"
            app:layout_constraintTop_toBottomOf="@+id/capturedImageTime" />


        <ImageView
            android:id="@+id/resultImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationZ="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logobg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/materialCardView2" />

        <TextView
            android:id="@+id/resultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:translationZ="50dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultImageView" />

        <TextView
            android:id="@+id/resultGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:translationZ="50dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultTitle" />

        <TextView
            android:id="@+id/resultPainter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Painter name"
            android:translationZ="50dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultGenre" />

        <TextView
            android:id="@+id/resultResemblance"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="67.4%"
            android:translationZ="50dp"
            android:layout_marginBottom="40dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultPainter" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>